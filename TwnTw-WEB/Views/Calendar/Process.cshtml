
<style>
    .table thead th {
        color: #fff;
        padding: 12px;
    }

        .table thead th:nth-child(1) {
            background-color: #0275d8; /* Blue for 'Tên' */
        }

        .table thead th:nth-child(2) {
            background-color: #f0ad4e; /* Orange for 'Số lượng công việc'*/
        }

        .table thead th:nth-child(3) {
            background-color: #5bc0de; /* Light Blue for 'Đang thực hiện'*/
        }

        .table thead th:nth-child(4) {
            background-color: #5cb85c; /* Green for  'Đã hoàn thành'*/
        }

        .table thead th:nth-child(5) {
            background-color: #d9534f; /* Red for 'Trễ' */
        }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="home.css">
<link rel="stylesheet" href="TienDo.css">
@model List<TwnTw_WEB.DTO_Models.TaskDetailViewModel_ForList>
<div id="progress-table">
    <h2>Tiến độ công việc</h2>
    @foreach(var workSpace in Model)
    {
        <h3>Tên workspace: @workSpace.workSpace.WSName</h3>
        <h5 class="badge bg-primary">@workSpace.workSpace.WSId</h5>

        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Số lượng công việc</th>
                    <th>Đang thực hiện</th>
                    <th>Đã hoàn thành</th>
                    <th>Trễ</th>
                </tr>
            </thead>
            <tbody>
                @{
                    //Lấy số lượng công việc đã hoàn thanh, đang thực hiện, trễ
                    ViewBag.Done = workSpace.taskDetails.Where(a => a.Status == "Done").Count();
                    ViewBag.Processing = workSpace.taskDetails.Where(a => a.Status == "Processing").Count();
                    ViewBag.Late = workSpace.taskDetails.Where(a => a.Status == "Late").Count();
                    ViewBag.TaskQuantity = workSpace.taskDetails.Count();
                    //Lấy tên người nhận công việc
                    ViewBag.Username = workSpace.memberDetail.Users.UserName;
                }
                <tr>
                    <td>@ViewBag.Username</td>
                    <td>@ViewBag.TaskQuantity</td>
                    <td>@ViewBag.Done</td>
                    <td>@ViewBag.Processing</td>
                    <td>@ViewBag.Late</td>
                </tr>
                    
                
                <!-- More rows as needed -->
            </tbody>
        </table>
    }
    
    
    
</div>
<div class="mt-2 mb-2">
    <a asp-action="ListWorkspace" asp-controller="Workspace">Trở về không gian làm việc</a>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
