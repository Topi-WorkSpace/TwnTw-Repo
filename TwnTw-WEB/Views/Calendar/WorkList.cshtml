@model List<TwnTw_WEB.DTO_Models.TaskDetailViewModel_ForList>
<style>

    .list-group-item a {
        text-decoration: none;
        color: #fff;
        display: block;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.3s;
    }

        .list-group-item a:hover {
            transform: scale(1.05);
        }
</style>
<div class="container">
    <div id="task-list-table">
        <h2>Danh sách công việc</h2>

        @foreach(var workSpace in Model)
        {
            <h3>Tên workspace: @workSpace.workSpace.WSName</h3>
            <h5 class="badge bg-info">@workSpace.workSpace.WSId</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên công việc</th>
                        <th>Ngày tạo</th>
                        <th>Ngày kết thúc</th>
                        <th>Người nhận</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if(workSpace.taskDetails.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">Không có công việc nào</td>
                        </tr>
                    }
                    else
                    {
                        foreach(var taskDetail in workSpace.taskDetails)
                        {
                            <tr>
                                <td>@taskDetail.Description</td>
                                <td>@taskDetail.CreatedDate</td>
                                <td>@taskDetail.EndDate</td>
                                <td>@workSpace.memberDetail.Users.UserName</td>
                                <td><div class="badge bg-warning text-black">@taskDetail.Status</div></td>
                            </tr>
                        }
                    }

                    <!-- Thêm nhiều hàng khác nếu cần -->
                </tbody>
            </table>
        }
        
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<div class="mt-2 mb-2">
    <a asp-action="ListWorkspace" asp-controller="Workspace">Trở về không gian làm việc</a>
</div>